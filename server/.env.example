# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-use-strong-random-string
DEBUG=True
ALLOWED_HOSTS=*

# Database (optional - defaults to SQLite if not set)
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/hiring_db
# OR individual settings:
# DB_NAME=hiring_db
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (for interview invites and offer letters)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Environment
DJANGO_SETTINGS_MODULE=config.settings.development
